	</Body>

	<Body fx:id="left_paddle" layoutX="20.0" layoutY="70.0" bodyType="DYNAMIC">
	    <Brick width="20.0" height="70.0" styleClass="paddle"/>
	</Body>    
	
	<Body fx:id="right_paddle" layoutX="760.0" layoutY="70.0" bodyType="DYNAMIC">

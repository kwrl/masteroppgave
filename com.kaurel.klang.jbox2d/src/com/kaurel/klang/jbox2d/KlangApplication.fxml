      <URL value="@KlangApplication.css" />
    </stylesheets>

    <Brick layoutX="0.0" layoutY="0.0" width="800.0" height="10.0" styleClass="wall"/>
    <Brick layoutX="0.0" layoutY="590.0" width="800.0" height="10.0" styleClass="wall"/>

	<Body fx:id="ball" layoutX="130.0" layoutY="150.0" bodyType="DYNAMIC">
